<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111"
    tools:context=".ui.Calculator">

    <TextView
        android:id="@+id/outputWindow"
        android:layout_width="335dp"
        android:layout_height="83dp"
        android:layout_margin="10dp"
        android:gravity="end"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="70sp"

        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="20sp"
        android:autoSizeMaxTextSize="70sp"
        android:autoSizeStepGranularity="2sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.141" />

    <TextView
        android:id="@+id/outputWindow2"
        android:layout_width="333dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:ellipsize="none"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="end"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="0"
        android:textColor="#757575"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.256" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/grid"
        android:layout_width="395dp"
        android:layout_height="498dp"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outputWindow2"
        app:layout_constraintVertical_bias="0.609">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_circle"
            android:text="ᐊ"
            android:textColor="#F47430"
            android:textSize="25sp"
            app:layout_column="1"
            app:layout_row="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ac"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_circle"
            android:text="AC"
            android:textColor="#F47430"
            android:textSize="25sp"
            app:layout_column="0"
            app:layout_row="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/procent"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_circle"
            android:text="%"
            android:textColor="#F47430"
            android:textSize="25sp"
            app:layout_column="2"
            app:layout_row="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/devide"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_circle"
            android:text="÷"
            android:textColor="#F47430"
            android:textSize="25sp"
            app:layout_column="3"
            app:layout_row="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/multiply"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_circle"
            android:text="×"
            android:textColor="#F47430"
            android:textSize="25sp"
            app:layout_column="3"
            app:layout_row="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_circle"
            android:text="−"
            android:textColor="#F47430"
            android:textSize="25sp"
            app:layout_column="3"
            app:layout_row="2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_circle"
            android:text="+"
            android:textColor="#F47430"
            android:textSize="25sp"
            app:layout_column="3"
            app:layout_row="3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_circle_fullfilled"
            android:text="="
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_column="3"
            app:layout_row="4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="90sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_circle"
            android:text=","
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_column="2"
            app:layout_row="4" />

        <!--        <Button-->
        <!--            android:id="@+id/change_mod"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="90dp"-->
        <!--            android:background="@drawable/button_circle"-->
        <!--            android:text="m"-->
        <!--            android:textSize="20dp"-->
        <!--            app:layout_column="0"-->
        <!--            app:layout_row="4" />-->
        <!--        -->


