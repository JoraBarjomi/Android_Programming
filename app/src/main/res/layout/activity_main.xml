            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_circle"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_column="0"
            app:layout_row="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_circle"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_column="1"
            app:layout_row="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_circle"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_column="2"
            app:layout_row="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_circle"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_column="0"
            app:layout_row="2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_circle"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="25sp"
