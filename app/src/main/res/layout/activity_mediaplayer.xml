<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mediaplayer">

    <TextView
        android:id="@+id/textView"
        android:layout_width="113dp"
        android:layout_height="26dp"
        android:text="MediaPlayer"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <LinearLayout
        android:layout_width="277dp"
        android:layout_height="76dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playingBar"
        app:layout_constraintVertical_bias="0.205">


        <ImageButton
            android:id="@+id/unlike"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:layout_weight="0"
            android:alpha="0.5"
            android:background="@drawable/heart_crossed"
            android:gravity="center"
            android:rotationY="180" />

        <ImageButton
            android:id="@+id/btnprev"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_weight="0"
            android:background="@null"
            android:rotationY="180"
            android:scaleType="centerInside"
            android:src="@drawable/control_btn" />

        <ImageButton
            android:id="@+id/btnplay"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@null"
            android:contentDescription="PlayBtn"
            android:scaleType="centerInside"
            android:src="@drawable/play_btn" />

        <ImageButton
            android:id="@+id/btnnext"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_weight="0"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/control_btn" />

        <ImageButton
            android:id="@+id/like"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:layout_weight="0"
            android:alpha="0.5"
            android:background="@null"
            android:src="@drawable/heart_empty"
            android:scaleType="centerInside"/>

    </LinearLayout>

    <SeekBar
        android:id="@+id/playingBar"
        android:layout_width="346dp"
        android:layout_height="52dp"
        android:progressTint="#DCDCDC"
        android:thumbTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.714" />

    <SeekBar
        android:id="@+id/volume"
        android:layout_width="276dp"
        android:layout_height="48dp"
        android:layout_marginStart="224dp"
        android:progressTint="#DCDCDC"
        android:rotation="270"
        android:thumbTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.313" />

    <TextView
        android:id="@+id/nameSong"
        android:layout_width="346dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:text="NameSong"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/authorSong"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/maxTime"
        android:layout_width="37dp"
        android:layout_height="19dp"
        android:text="00:00"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.891"
        app:layout_constraintStart_toEndOf="@+id/maxTime"
        app:layout_constraintTop_toBottomOf="@+id/playingBar" />

    <TextView
        android:id="@+id/currTime"
        android:layout_width="37dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        android:text="00:00"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playingBar" />

    <TextView
        android:id="@+id/authorSong"
        android:layout_width="346dp"
        android:layout_height="25dp"
        android:layout_marginBottom="12dp"
        android:text="AuthourName"
        android:textColor="#DCDCDC"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/playingBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/songImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/music_note"
        app:layout_constraintBottom_toTopOf="@+id/nameSong"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.395"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>